class Solution {
    public boolean isPalindrome(String s) {
        s = s.replaceAll("[^A-Za-z0-9]", "").toLowerCase();
        StringBuffer sb=new StringBuffer(s);
        StringBuffer rev=sb.reverse();
        System.out.println(rev);
        if(rev.toString().equals(s)){
            return true;
        }
        else {
            return false;
        }
        
    }
}
